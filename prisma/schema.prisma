generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id String @id @default(uuid())
  orgName  String
  orgEmail String @unique
  password  String
  meeting Meeting[]
  employee Employee[]
  refreshToken RefreshToken[]
}

model Meeting {
  id  String @id @default(uuid())
  visitorFirstName String
  visitorLastName String
  visitorOrg  String
  visitorEmail  String
  reasonOfVisit String
  orgId   String
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  hostId String
  employee Employee @relation(fields: [hostId], references: [id], onDelete: Cascade)

  startTime DateTime @default(now())
  endTime DateTime?
  
  status  meetingStatus @default(ONGOING)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt  
}

model Employee {
  id String @id @default(uuid())
  orgId String
  employeeName  String  
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  employeeEmail String  @unique
  designation String 
  department  String
  meeting Meeting[]
}

model RefreshToken {
  id  String @id @default(uuid())
  token String @unique
  orgId  String @unique
  organization  Organization  @relation(fields: [orgId],  references: [id], onDelete: Cascade)
  expiryDate  DateTime
}

enum meetingStatus {
  ONGOING
  COMPLETED
}