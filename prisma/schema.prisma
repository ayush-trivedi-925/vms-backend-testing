generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id String @id @default(uuid())
  orgName  String
  orgEmail String @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  meetings Meeting[]
  employees Employee[]
  authCredentials AuthCredential[]
}

model Meeting {
  id  String @id @default(uuid())
  visitorFirstName String
  visitorLastName String
  visitorOrg  String
  visitorEmail  String
  reasonOfVisit String
  orgId   String
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  hostId String
  employee Employee @relation(fields: [hostId], references: [id], onDelete: Cascade)

  startTime DateTime @default(now())
  endTime DateTime?
  
  status  MeetingStatus @default(ONGOING)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt  
}

model Employee {
  id String @id @default(uuid())
  orgId String
  employeeName  String  
  organization  Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  employeeEmail String  @unique
  designation String 
  department  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  meetings Meeting[]
}

model RefreshToken {
  id  String @id @default(uuid())
  token String @unique
  authId  String @unique
  authCredentials AuthCredential @relation(fields: [authId], references: [id], onDelete: Cascade)
  expiryDate  DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


model AuthCredential{
  id String @id @default(uuid())
  email String @unique
  password  String
  orgId String
  role RoleEnum
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  organization  Organization @relation(fields: [orgId],references: [id], onDelete: Cascade)
  refreshToken RefreshToken[]
  
}


enum MeetingStatus {
  ONGOING
  COMPLETED
}

enum RoleEnum {
  Admin
  User
}